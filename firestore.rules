rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // For local development and demonstration purposes, allow any authenticated
    // user to read and write all data.
    // IMPORTANT: In a production environment, you must implement granular,
    // role-based security rules to protect your data.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
