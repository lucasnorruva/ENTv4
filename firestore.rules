rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // By default, deny all reads and writes.
    // All data access should go through authenticated server-side actions
    // that use the Firebase Admin SDK, which bypasses these rules.
    // This is a secure default.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
